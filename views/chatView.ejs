<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Webchat</title>

  <link rel="stylesheet" href="styles.css">
</head>
<body>
  <form id="chat" class="chat">
    <div class="main-section">
      <div class="messages" id="messages">
        <% messages.forEach(({ message, nickname, timestamp }) => { %>
          <p style="margin-bottom: 10px;" data-testid="message">
            <%= timestamp %> - <%= nickname %>: <%= message %>
          </p>
        <% }) %>
      </div>
      <div class="online-users" id="online-users"></div>
    </div>
    <div class="div-input-button">
      <input
        type="text"
        placeholder="digite sua mensagem"
        id="message"
        class="message"
        data-testid="message-box"
      >
      <button
        id="button-message"
        type="button"
        data-testid="send-button"
      >
        Enviar Mensagem
      </button>
    </div>
    <div class="div-input-button">
      <input
        type="text"
        placeholder="crie seu usuÃ¡rio"
        id="username"
        class="username"
        data-testid="nickname-box"
      >
      <button
        id="button-user"
        type="button"
        data-testid="nickname-button"
      >
        Criar Nickname
      </button>
    </div>
  </form>

  <script src="/socket.io/socket.io.js"></script>
  <script src="script.js"></script>
</body>
</html>